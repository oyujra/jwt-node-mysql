<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="Mark Otto, Jacob Thornton, and Bootstrap contributors">
    <meta name="generator" content="Hugo 0.84.0">
    <title>Signin - Inventario IPAS</title>
    <link href="css/bootstrap.min.css" rel="stylesheet">
   <!-- Custom styles for this template -->
    <link href="css/signin.css" rel="stylesheet">
  </head>
  <body class="text-center">
    
<main class="form-signin text-center shadow-lg p-3 mb-5">
  <form id="formLogin" action="/login" method="post">
    <img class="mb-4" src="img/logo.png" alt="" width="200" >
    <h1 class="h3 mb-3 fw-normal">Please sign in</h1>

    <div class="form-floating">
      <input type="text" class="form-control" id="user" name="user" placeholder="User">
      <label for="floatingInput">User</label>
    </div>
    <div class="form-floating">
      <input type="password" class="form-control" id="pass" name="pass" placeholder="Password">
      <label for="floatingPassword">Password</label>
    </div>

    <div class="checkbox mb-3">
    </div>
    <button class="w-100 btn btn-lg btn-primary" type="submit">Login</button>
  </form>
  <br>
  <a type="button" href="/register" class="w-100 btn btn-lg btn-primary">Registrarme</a>
</main>


<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<% if( alert ) { %>
    <script>
        Swal.fire({
            title: '<%= alertTitle %>',
            icon: '<%= alertIcon %>',
            text:'<%= alertMessage %>',
            showConfirmButton: <%= showConfirmButton %>,
            timer: <%= timer %>,
            }).then(()=>{
                window.location = '/<%= ruta %>'
            })
    </script>
<% } %>
  </body>
</html>
